automated1.example.com {
	tls no_wildcard
	respond "Automated!"
}

automated2.example.com {
	tls no_wildcard
	respond "Automated!"
}

shadowed.example.com {
	respond "Shadowed!"
}

*.example.com {
	tls cert.pem key.pem
	respond "Wildcard!"
}
